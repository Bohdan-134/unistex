section.ads
    img(src="./img/ads_section/ads_img1.svg", alt="bg-img").ads_img1
    img(src="./img/ads_section/ads_img2.svg", alt="bg-img").ads_img2
    .container
        img(src="./img/ads_section/ads_rocket.webp", alt="rocket" data-aos="fade-up" data-aos-offset="50").ads-rocket__img
